@model List<Models.LivreViewModel>

<div class="container">
    @foreach (var book in Model)
    {
            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.LivreId">
                <div class="book-box">
                    <div class="BookCover">
                        <img src="~/images/@(book.Couverture + ".jpg")" alt="Book Cover" />
                    </div>
                    <div class="BookHeader">
                        <h3>@book.Titre</h3>
                    </div>
                </div>
            </a>
    }
</div>

<style>
    a {
        text-decoration: none;
        color: black;
    }

    .container {
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
    }

    .book-box {
        border: 3px solid #ddd;
        text-align: center;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 300px;
        max-height: 500px;
    }

    .BookCover {
        position: relative;
        overflow: hidden;
        width: 100%;
        height: 100%;
    }

    .BookCover img {
        width: 100%;
        height: auto; /* Set height to auto to maintain aspect ratio */
        object-fit: cover;
        z-index: -1;
    }

    .BookHeader {
        max-width: 90%;
        margin-top: 10px;
        justify-content: center;
        align-items: center;
        background-color:rgba(255,255,255,0.2);
    }
</style>
