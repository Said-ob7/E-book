@model Models.ChapitreViewModel
@{
    int nextChapterId = Model.ChapitreId + 1;
    int previousChapterId = Model.ChapitreId - 1;
}
<div class="URL">
    <div class="URL_cont">
        <a asp-action="Index" asp-controller="Book" asp-route-id="@Model.LivreId">Books</a>
        <p>/</p>
        <a asp-action="ChapterDetails" asp-controller="Book" asp-route-id="@Model.LivreId">@Model.Titre</a>
    </div>
    
</div>
 
<div class="holder">
    <div class="Chapitre_titl">
        <h3>@Model.Titre</h3>
    </div>
    <div class="Chap_content">
        <div class="content">
            <p>@Model.Contenu</p>
        </div>
    </div>
</div>

<div>
   
</div>
<div class="Chapter_control">
        <a class="button" asp-action="ChapterDetails" asp-controller="Book" asp-route-livreId="@Model.LivreId" asp-route-chapitreId="@nextChapterId">Next Chapter</a>
        <a class="button" asp-action="ChapterDetails" asp-controller="Book" asp-route-livreId="@Model.LivreId" asp-route-chapitreId="@previousChapterId">Previous Chapter</a>
</div>
    

<style>
    p{
        margin-top: 0;
        margin-bottom: 0;
    }
    .URL{
        display: flex;
        align-items: center;
        background-color:#eaeff2;
        height: 40px;
        justify-content: center;


    }
    .URL_cont{
        display:flex;
        flex-direction: row;
        align-items: center;
        gap:10px;
        margin: 5px;
        min-width: 1200px;
    }
    .URL_cont a,.URL_cont p{
        text-decoration: none;
        color: #bbb;
    }
    .holder{
        display:flex;
        flex-direction: column;
        justify-content: center;
    }
    .Chapitre_titl{
        display: flex;
        justify-content: center;
        margin: 30px;
    }
    .Chap_content{
        display: flex;
        justify-content: center;
        margin: 30px;
        max-width: 800px;
    }
    .content{
        margin: 0;
    }
    .Chapter_control{
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 50px;
        margin: 30px;
    }
    .button{
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10px;
        height:40px;
        width:150px;
        background-color: #f5f6fc;
    }
    .button:hover{
        background-color: #ADD8E6;
    }
    .Chapter_control a{
        color: black;
        text-decoration: none;
    }
    

</style>